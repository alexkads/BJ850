{
  "name": "bj850-hercules-clone",
  "version": "1.0.0",
  "description": "Clone do Hercules Setup Utility para balança Jundiaí BJ-850",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "keywords": ["electron", "balança", "jundiai", "bj850", "hercules"],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "net": "^1.0.2"
  },
  "build": {
    "appId": "com.yourcompany.bj850-hercules",
    "productName": "BJ850 Hercules Clone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

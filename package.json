{
  "name": "bj850-hercules-clone",
  "version": "1.0.0",
  "description": "Clone open-source do Hercules Setup Utility especificamente para comunicação com balanças Jundiaí BJ-850 via Ethernet TCP/IP",
  "main": "src/main.js",
  "homepage": "https://github.com/alexkads/BJ850",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexkads/BJ850.git"
  },
  "bugs": {
    "url": "https://github.com/alexkads/BJ850/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "balança",
    "jundiai",
    "bj850",
    "hercules",
    "tcp",
    "ethernet",
    "industrial",
    "scale",
    "weight",
    "measurement",
    "automation",
    "brasil"
  ],
  "author": {
    "name": "Alex Kads",
    "email": "alexkads@example.com",
    "url": "https://github.com/alexkads"
  },
  "contributors": [
    {
      "name": "Comunidade BJ850",
      "url": "https://github.com/alexkads/BJ850/graphs/contributors"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "net": "^1.0.2"
  },
  "build": {
    "appId": "com.alexkads.bj850-hercules",
    "productName": "BJ850 Hercules Clone",
    "copyright": "Copyright © 2025 Alex Kads",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/.DS_Store",
      "!**/node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "src/main.js"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "alexkads",
      "repo": "BJ850"
    }
  }
}
